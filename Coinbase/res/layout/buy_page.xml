<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#104E8B"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_layout1"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="#104E8B"
        android:orientation="horizontal"
        android:paddingBottom="5sp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/button8"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="\u039E"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <View
            android:id="@+id/view15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:background="#104E8B"
            android:gravity="center"
            android:text="您的BTC余额"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView15"
            android:layout_marginLeft="50dp"
            android:background="#104E8B"
            android:gravity="center"
            android:text="BTC"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView15"
            android:layout_toRightOf="@+id/textView16"
            android:background="#104E8B"
            android:gravity="center_vertical"
            android:text="0.0000"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="25dp"
            android:background="#104E8B"
            android:gravity="center"
            android:text="CN\u00A5"
            android:textColor="#ffffff"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/textView18"
            android:background="#104E8B"
            android:gravity="center_vertical"
            android:text="0.00"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view16"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <TextView
            android:id="@+id/textView20"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:background="#104E8B"
            android:gravity="center"
            android:text="您的LTC余额"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView20"
            android:layout_marginLeft="50dp"
            android:background="#104E8B"
            android:gravity="center"
            android:text="LTC"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView20"
            android:layout_toRightOf="@+id/textView21"
            android:background="#104E8B"
            android:gravity="center_vertical"
            android:text="0.0000"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="25dp"
            android:background="#104E8B"
            android:gravity="center"
            android:text="CN\u00A5"
            android:textColor="#ffffff"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/textView23"
            android:background="#104E8B"
            android:gravity="center_vertical"
            android:text="0.00"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view17"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <TextView
            android:id="@+id/textView25"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:background="#104E8B"
            android:gravity="center"
            android:text="您的ETH余额"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView25"
            android:layout_marginLeft="50dp"
            android:background="#104E8B"
            android:gravity="center"
            android:text="ETH"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView25"
            android:layout_toRightOf="@+id/textView26"
            android:background="#104E8B"
            android:gravity="center_vertical"
            android:text="0.0000"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="25dp"
            android:background="#104E8B"
            android:gravity="center"
            android:text="CN\u00A5"
            android:textColor="#ffffff"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/textView28"
            android:background="#104E8B"
            android:gravity="center_vertical"
            android:text="0.00"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view19"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="65dp"
            
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="CN" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LTC" />
            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETH" />
        </RadioGroup>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            
            android:layout_below="@+id/radioGroup1"
            android:ems="10"
            android:layout_marginLeft="75dp"
            android:background="#ffffff"
            
            android:hint="输入购买数量"
            android:textColor="#000000"
            android:textColorHint="#cccccc" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText1"
            android:layout_alignRight="@+id/editText1"
            android:layout_below="@+id/editText1"
            android:background="#1C86EE"
            android:text="购买" />

    </RelativeLayout>

</LinearLayout>